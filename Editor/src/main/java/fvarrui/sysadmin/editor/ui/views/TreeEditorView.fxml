<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<TitledPane fx:id="view" alignment="BASELINE_LEFT" collapsible="false" contentDisplay="RIGHT" text="Challenge tree" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
	<content>
		<TreeView fx:id="treeView" />
	</content>
	<graphic>
      <BorderPane>
         <center>
      		<HBox alignment="BASELINE_RIGHT" spacing="5.0" BorderPane.alignment="CENTER">
      			<children>
      				<Button fx:id="addButton" alignment="CENTER_RIGHT" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#addButtonAction" prefHeight="25.0" text="Add">
      					<graphic>
      						<ImageView>
      							<image>
      								<Image url="@../resources/add-16x16.png" />
      							</image>
      						</ImageView>
      					</graphic>
      				</Button>
      				<Button fx:id="deleteButton" alignment="CENTER_RIGHT" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#deleteButtonAction" prefHeight="25.0" text="Delete">
      					<graphic>
      						<ImageView>
      							<image>
      								<Image url="@../resources/remove-16x16.png" />
      							</image>
      						</ImageView>
      					</graphic>
      				</Button>
      			</children>
      		</HBox>
         </center>
      </BorderPane>
	</graphic>
	<padding>
		<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
	</padding>
</TitledPane>
