<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane fx:id="view" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
	<top>
		<TitledPane collapsible="false" text="Test" BorderPane.alignment="CENTER">
			<content>
				<GridPane hgap="5.0" vgap="5.0">
					<columnConstraints>
						<ColumnConstraints hgrow="NEVER" />
						<ColumnConstraints hgrow="ALWAYS" />
					</columnConstraints>
					<rowConstraints>
						<RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
						<RowConstraints maxHeight="61.0" minHeight="10.0" prefHeight="61.0" vgrow="SOMETIMES" />
						<RowConstraints maxHeight="25.0" minHeight="0.0" prefHeight="0.0" vgrow="SOMETIMES" />
					</rowConstraints>
					<children>
						<Label text="Name:" GridPane.halignment="RIGHT" GridPane.valignment="BASELINE" />
						<Label text="Description:" GridPane.halignment="RIGHT" GridPane.rowIndex="1" GridPane.valignment="BASELINE" />
						<TextField fx:id="testText" promptText="Test name" GridPane.columnIndex="1" GridPane.valignment="BASELINE" />
						<TextArea fx:id="descriptionText" prefHeight="69.0" prefWidth="608.0" promptText="Test description" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.valignment="BASELINE" />
					</children>
				</GridPane>
			</content>
         <graphic>
            <ImageView pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../resources/test-16x16.png" />
               </image>
            </ImageView>
         </graphic>
		</TitledPane>
	</top>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</BorderPane>
