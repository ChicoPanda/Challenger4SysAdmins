<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<TitledPane fx:id="view" collapsible="false" text="Goals" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
   <content>
      <VBox spacing="5.0">
         <children>
            <TableView fx:id="GoalsTableView" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="nameCol" minWidth="-1.0" prefWidth="174.0" text="Name" />
                <TableColumn fx:id="descriptionCol" prefWidth="398.0" text="Description" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox spacing="5.0">
               <children>
                  <Button mnemonicParsing="false" text="Add">
                     <graphic>
                        <ImageView>
                           <image>
                              <Image url="@../resources/newChallengeIcon.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <tooltip>
                        <Tooltip text="Add Goals" />
                     </tooltip></Button>
                  <Button mnemonicParsing="false" text="Delete">
                     <graphic>
                        <ImageView>
                           <image>
                              <Image url="@../resources/minusGoalsIcon.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <tooltip>
                        <Tooltip text="Delete Goals" />
                     </tooltip></Button>
                  <Button mnemonicParsing="false" text="Edit">
                     <graphic>
                        <ImageView>
                           <image>
                              <Image url="@../resources/editChallengeIcon.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <tooltip>
                        <Tooltip text="Edit Goals" />
                     </tooltip></Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </content>
</TitledPane>
